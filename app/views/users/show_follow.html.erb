<h1><%= @title %></h1>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <%= render 'link_btn' %>
  </aside>
  <div class="col-md-8">
    <ul style="list-style: none;">
      <% @users.each do |user| %>
        <li style="margin-bottom: 5px;"><%= gravatar_for user, size: 20 %><%= link_to user.name, user %></li>
      <% end %>
    </ul>
  </div>
</div>
  